    "bn.js": "^4.11.8",
    "ganache-cli": "^6.2.5",
    "openzeppelin-solidity": "^2.1.0",
    "web3": "1.0.0-beta.37",
    "web3-utils": "1.0.0-beta.37"
  },
  "devDependencies": {
    "babel-runtime": "^6.26.0",
    "bluebird": "^3.5.3",
    "chai": "^4.2.0",
    "coveralls": "^3.0.2",
    "dotenv": "^6.2.0",
    "eslint": "^5.8.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.2.0",
